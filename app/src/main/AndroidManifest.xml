<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.simonpham.tiles4devs">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service
            android:name=".tiles.DemoModeService"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/ic_tile_demo_mode"
            android:label="@string/tile_demo_mode"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <service
            android:name=".tiles.DebugGpuOverdrawService"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/ic_tile_debug_gpu_overdraw"
            android:label="@string/tile_debug_gpu_overdraw"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
    </application>
</manifest>
